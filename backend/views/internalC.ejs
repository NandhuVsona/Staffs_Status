<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Internal Marks Calculator</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <style>
    * {
      margin: 0%;
      padding: 0%;
      box-sizing: border-box;
      font-family: "Poppins", sans-serif;
    }
    .container {
      width: 100%;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      position: relative;
    }
    form {
      width: 100%;
      padding: 10px 20px;
      display: flex;
      flex-direction: column;
      gap: 20px;
    }
    input {
      height: 50px;
      padding-left: 15px;
      font-size: 18px;
      border: 1px solid;
    }
    input:focus {
      outline: none;
      border: 1px solid rgb(0, 128, 70);
    }
    .form-group {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }
    a {
      text-decoration: none;
      width: 100%;
    }
    a button {
      background-color: rgb(255, 0, 144);
      border: none;
      color: white;
      font-family: inherit;
      font-size: inherit;
      font-weight: 600;
    }
    .btns button {
      width: 100%;
      height: 50px;
    }
    .btns {
      display: flex;
      gap: 10px;
      height: 40px;
    }
    #result {
      position: absolute;
      width: 350px;
      height: 350px;
      background-color: rgb(255, 255, 255);
      display: flex;
      justify-content: space-evenly;
      align-items: center;
      flex-direction: column;
      padding: 0px 10px;
      gap: 10px;
      transition: all 0.3s ease;
      animation: open 0.3s ease;
    }
    @keyframes open {
      0% {
        transform: scale(0);
      }
      100% {
        transform: scale(1);
      }
    }
    #result button {
      width: 100%;
      height: 40px;
    }
    #internal {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: rgb(36, 208, 255);
      font-size: 45px;
    }
    .close {
      border: none;
      font-family: inherit;
      font-size: inherit;
      font-weight: 600;
      background-color: rgb(27, 184, 53);
      color: #fff;
    }

    .message {
      text-align: center;
    }
    .total {
      background-color: white;
      padding: 3px 12px;
      background-color: rgb(255, 191, 0);
      position: absolute;
      width: 100%;
      bottom: -20px;
      height: 35px;
      line-height: 30px;
      font-weight: 500;
      text-align: center;
    }
    .outer {
      position: relative;
      margin-bottom: 15px;
    }
    #result.hide {
      display: none;
    }
    #calculate {
      background-color: rgb(126, 20, 255);
      border: none;
      font-family: inherit;
      font-size: inherit;
      font-weight: 600;
      color: #fff;
    }
    .container.dim {
      background-color: #c9c9c9;
    }
    .container.dim input {
      background-color: #c9c9c9;
      border: 1px solid #7a7a7a;
    }
    .inputs {
      width: 100%;
      justify-content: center;
      align-items: center;
      display: flex;
      gap: 10px;
      text-align: center;
    }
    .inputs input {
      padding: 0;
      width: 100px;
      height: 50px;
      text-align: center;
      flex-grow: 1;
      margin-top: 10px;
      margin-bottom: 10px;
    }
  </style>
  <body>
    <div class="container">
      <div id="result" class="hide">
        <h2>Your Internal</h2>
        <div class="outer">
          <h1 id="internal">0</h1>
          <p class="total">Out of 40</p>
        </div>
        <div class="message"></div>
        <button class="close">Okay</button>
      </div>
      <h1>Internal Calculator</h1>
      <form action="" autocomplete="off">
        <div class="form-group">
          <label style="text-align: center" for="cie1"
            >Enter your CIE marks</label
          >
          <div class="inputs">
            <div class="cie1">
              <input
                type="number"
                name="cie1"
                id="cie1"
                placeholder="50"
                maxlength="2"
              />
              <p>CIE I</p>
            </div>
            <div class="cie2">
              <input
                type="number"
                name="cie2"
                id="cie2"
                placeholder="50"
                maxlength="2"
              />
              <p>CIE II</p>
            </div>
            <div class="cie3">
              <input
                type="number"
                name="cie3"
                id="cie3"
                placeholder="50"
                maxlength="2"
              />
              <p>CIE III</p>
            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="moodle">Enter your Moodle mark</label>
          <input
            type="number"
            name="moodle"
            id="moodle"
            placeholder="out of 6"
            maxlength="1"
          />
        </div>
        <div class="form-group">
          <label for="assignment">Enter your assignment mark</label>
          <input
            type="number"
            name="assignment"
            id="assignment"
            placeholder="out of 5"
            maxlength="1"
          />
        </div>
        <div class="form-group">
          <label for="attendance">Enter your attendance mark</label>
          <input
            type="number"
            name="attendance"
            id="attendance"
            placeholder="out of 5"
            maxlength="1"
          />
        </div>
        <div class="btns">
          <a href="/"><button>Clear</button></a>
          <button id="calculate">Calculate</button>
        </div>
      </form>
    </div>
    <script>
      const calculateBtn = document.querySelector("#calculate");
      const outputCard = document.querySelector("#internal");
      const msg = document.querySelector(".message");
      const result = document.querySelector("#result");

      calculateBtn.addEventListener("click", calculate);

      function calculate(event) {
        event.preventDefault();
        let CIE_1 = Number(document.getElementById("cie1").value);
        let CIE_2 = Number(document.getElementById("cie2").value);
        let CIE_3 = Number(document.getElementById("cie3").value);
        let moodleMark = Number(document.getElementById("moodle").value);
        let attendanceMark = Number(
          document.getElementById("attendance").value
        );
        let assignmentMark = Number(
          document.getElementById("assignment").value
        );
        let internal =
          CIE_1 * 0.16 +
          CIE_2 * 0.16 +
          CIE_3 * 0.16 +
          moodleMark +
          attendanceMark +
          assignmentMark;
console.log(internal)
        let message = scoreMsg(internal);

        outputCard.textContent = " ";
        slideup();
        let i = 0;
        let intervalId = setInterval(() => {
          if (internal > i) {
            outputCard.textContent = i;
            msg.textContent = " ";
            i++;
          } else {
            outputCard.textContent = internal.toFixed(1);
            msg.textContent = message;
            clearInterval(intervalId); // Call with the stored ID
          }
        }, 50);
      }
      function scoreMsg(score) {
        let message;

        if (score == 0) {
          message = "You have zero internal";
        } else if (score <= 25) {
          message = "Too low..Try to get more marks in semester.";
        } else if (score > 25 && score <= 30) {
          message = "Good..Try to get more marks in semester.";
        } else if (score > 30) {
          message = "Good job! Keep it up.";
        }

        return message;
      }

      let closeBtn = document.querySelector(".close");
      closeBtn.addEventListener("click", slideup);

      function slideup() {
        document.getElementById("result").classList.toggle("hide");
        document.querySelector(".container").classList.toggle("dim");
      }
    </script>
  </body>
</html>
